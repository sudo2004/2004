#include <stdio.h>

int main() {
    int n, i, j, time = 0, smallest, count = 0, end;
    int at[10], bt[10], rt[10];   // arrival, burst, remaining time
    float avg_wait = 0, avg_tat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("Enter arrival time of P%d: ", i + 1);
        scanf("%d", &at[i]);
        printf("Enter burst time of P%d: ", i + 1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
    }

    rt[9] = 9999;  // large number to represent infinity

    printf("\nProcess\tAT\tBT\tWT\tTAT\n");

    for(time = 0; count != n; time++) {
        smallest = 9;
        for(i = 0; i < n; i++) {
            if(at[i] <= time && rt[i] < rt[smallest] && rt[i] > 0)
                smallest = i;
        }

        rt[smallest]--;

        if(rt[smallest] == 0) {
            count++;
            end = time + 1;
            int tat = end - at[smallest];
            int wt = tat - bt[smallest];
            avg_wait += wt;
            avg_tat += tat;
            printf("P%d\t%d\t%d\t%d\t%d\n", smallest + 1, at[smallest], bt[smallest], wt, tat);
        }
    }

    printf("\nAverage Waiting Time = %.2f", avg_wait / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);
    return 0;
}
