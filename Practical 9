#include <stdio.h>

int findLRU(int time[], int n) {
    int i, min = time[0], pos = 0;
    for(i = 1; i < n; ++i) {
        if(time[i] < min) {
            min = time[i];
            pos = i;
        }
    }
    return pos;
}

int main() {
    int frames[10], pages[30], time[10];
    int total_frames, total_pages;
    int counter = 0, faults = 0;
    int i, j, pos, flag1, flag2;

    printf("Enter number of pages: ");
    scanf("%d", &total_pages);

    printf("Enter page numbers: ");
    for(i = 0; i < total_pages; ++i)
        scanf("%d", &pages[i]);

    printf("Enter number of frames (minimum 3): ");
    scanf("%d", &total_frames);

    for(i = 0; i < total_frames; ++i)
        frames[i] = -1;

    printf("\nPage\tFrames\t\tPage Fault\n");

    for(i = 0; i < total_pages; ++i) {
        flag1 = flag2 = 0;

        // Check if page already in frame
        for(j = 0; j < total_frames; ++j) {
            if(frames[j] == pages[i]) {
                counter++;
                time[j] = counter;
                flag1 = flag2 = 1;
                break;
            }
        }

        // If page not found
        if(flag1 == 0) {
            for(j = 0; j < total_frames; ++j) {
                if(frames[j] == -1) {
                    counter++;
                    faults++;
                    frames[j] = pages[i];
                    time[j] = counter;
                    flag2 = 1;
                    break;
                }
            }
        }

        // If no empty frame, replace LRU
        if(flag2 == 0) {
            pos = findLRU(time, total_frames);
            counter++;
            faults++;
            frames[pos] = pages[i];
            time[pos] = counter;
        }

        // Print current frame status
        printf("%d\t", pages[i]);
        for(j = 0; j < total_frames; ++j) {
            if(frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }

        if(flag1 == 0)
            printf("\tPage Fault\n");
        else
            printf("\tNo Fault\n");
    }

    printf("\nTotal Page Faults = %d\n", faults);

    return 0;
}
